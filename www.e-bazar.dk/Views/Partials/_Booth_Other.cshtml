@model www.e_bazar.dk.Models.DTOs.dto_booth
@{
    string s = ViewContext.Controller.ViewBag.Search as string;
    string c = ViewContext.Controller.ViewBag.Cat as string;
}
    <div class="col-xs-4">
        <div class="col-xs-12  l-bt-other-header1">
            <span class="z-font-info z-bold">@Html.RouteLink(Model.name, "Booth", new { id = Model.booth_id, lev_a_search = "", lev_b_search = "" }, new { @class="black_link myfade" })</span><br />
        </div>
        <div class="col-xs-12 l-bt-other2 z-background-color-lightgrey z-border-darkgrey">
            <br />
        <div class="col-xs-8 z-padding-sides-0">

            <div class="col-xs-12 z-padding-sides-0">
                
                @if (Model.boothrating != null && Model.boothrating != 0.0)
                {
                    <span>
                        @for (double i = 0; i < 5; i += 0.5)
                        {
                            if (i % 1 == 0 && i + 1 <= Model.boothrating)
                            {
                                <i class="fas fa-star"></i>
                            }
                            else if (i % 1 == 0 && i + 0.5 <= Model.boothrating)
                            {
                                <i class="fas fa-star-half-alt"></i>
                            }
                            else if (i % 1 == 0)
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    </span>
                }
                else
                {
                    <span>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                    </span>
                }
            </div>
            
            <div class="col-xs-12 z-tooltip5 z-padding-sides-0 z-font-info">
                <i class="far fa-file-alt"></i>&nbsp;Om Standen
                <span class="z-center2 z-desc-tooltip5">@Html.DisplayWithBreaksFor(Model.description_limit)</span>
            </div>
        </div>
        <div class="col-xs-4 z-padding-sides-0">
            @{
                var thumb_path = !string.IsNullOrEmpty(Model.frontimage) ? @"/_content/images/profiles/" + Model.salesman_dto.sysname + "/booths/" + Model.sysname + "/t_" + Model.frontimage : "/_content/images/site/icons/booth_logo.png";
                var image_path = !string.IsNullOrEmpty(Model.frontimage) ? @"/_content/images/profiles/" + Model.salesman_dto.sysname + "/booths/" + Model.sysname + "/" + Model.frontimage : "/_content/images/site/icons/booth_logo.png";
                
                string[] classes = { "l-bt-other3", "z-background-color-lightgrey", "myfade", "loadlater" };
            
                object route = new { id = @Model.booth_id };
                string alt = "/_content/images/site/icons/booth_logo.png";
                string style = "";
                @Html.RouteImage("Booth", route, thumb_path, image_path, alt, classes, null, style, null)
            }
        </div>
            <br />
        </div>
    </div>
