@model www.e_bazar.dk.Models.Identity.ForgotPasswordViewModel
@{
    ViewBag.Title = "Glemt kodeord?";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginRouteForm("ForgotPassword", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Skriv din login e-mail.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-2" style="float:left;">
            @Html.Label("Email", new { @class = "col-md-2 control-label" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" class="btn btn-default" value="Anmod ny kodeord" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $(document).ready(function () {
        $('.z-myalert').hide();
    });
</script>